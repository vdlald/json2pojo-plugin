<idea-plugin>
    <id>com.vladislav.jsontopojo</id>
    <name>JsonToPojo</name>
    <version>1.0</version>
<!--    <vendor email="vlad.vdlald@gmail.com" url="http://www.yourcompany.com">YourCompany</vendor>-->

    <description>Plugin description</description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action
                id="com.vladislav.jsontopojo"
                class="com.vladislav.jsontopojo.plugin.actions.GenerateAction"
                text="Generate a Set of POJOs from JSON"
                description="Convert JSON to POJOs"
                icon="/icons/json.png"
        >
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>